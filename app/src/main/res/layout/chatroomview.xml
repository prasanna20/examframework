<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/listviewbg"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
         >
        <TableLayout
            android:id="@+id/tblHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow>
                    <TextView
                        android:id="@+id/txtRoomName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="Room Name"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/lblCreatedBy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view0"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="Created By : "
                        android:textColor="#000000"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/txtCreatedBy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view0"
                        android:paddingLeft="2dp"
                        android:paddingRight="10dp"
                        android:text="Created By"
                        android:textColor="#000000"
                        android:textSize="12sp" />

            </TableRow>
        </TableLayout>



        <TableLayout
            android:id="@+id/tblSetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tblHeader"
            android:paddingTop="5dp">
            <TableRow
                android:paddingLeft="20dp"
                >
                <TextView
                    android:id="@+id/txtChatCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="Count"
                    android:textColor="#000000"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textSize="14sp" />

                <ToggleButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="On"
                    android:id="@+id/toggleNotification"
                    android:checked="false"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_toRightOf="@id/txtChatCount" />

                <ToggleButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fav"
                    android:id="@+id/FavButton"
                    android:checked="true"
                    android:textOn="Yes"
                    android:textOff="No"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_toRightOf="@id/toggleNotification" />




            </TableRow>

            <TableRow
                android:paddingLeft="20dp">
                <TextView
                    android:id="@+id/lbltChatCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Chat"
                    android:textSize="12sp"
                    />

                <TextView
                    android:id="@+id/lblNotification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/lbltChatCount"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Notification"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/lblFavourite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Favourite"
                    android:layout_toRightOf="@id/lblNotification"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/lblCreatedBY"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_toRightOf="@id/lblFavourite"
                    android:text="Created"
                    android:textSize="10sp" />


            </TableRow>

        </TableLayout>


    </RelativeLayout>


    <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_below="@+id/relativeLayout1"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:background="#cdcfd2" />


</RelativeLayout>

